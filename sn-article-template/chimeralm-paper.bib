	author = {Jiang, Tao and Liu, Yongzhuang and Jiang, Yue and Li, Junyi and Gao, Yan and Cui, Zhe and Liu, Yadong and Liu, Bo and Wang, Yadong},
	month = aug,
	year = {2020},
	keywords = {/unread, Long-read sequencing, Scaling performance, Structural variants detection},
	pages = {189},
	file = {Jiang et al. - 2020 - Long-read-based human genomic structural variation detection with cuteSV.pdf:/Users/ylk4626/Library/CloudStorage/OneDrive-NorthwesternUniversity/Zotero/chimeralm-paper/Jiang et al. - 2020 - Long-read-based human genomic structural variation detection with cuteSV.pdf:application/pdf},
