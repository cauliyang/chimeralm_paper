@article{heller2019svim,
	title = {{SVIM}: structural variant identification using mapped long reads},
	volume = {35},
	issn = {1367-4803},
	shorttitle = {Svim},
	url = {https://doi.org/10.1093/bioinformatics/btz041},
	doi = {10.1093/bioinformatics/btz041},
	abstract = {Structural variants are defined as genomic variants larger than 50 bp. They have been shown to affect more bases in any given genome than single-nucleotide polymorphisms or small insertions and deletions. Additionally, they have great impact on human phenotype and diversity and have been linked to numerous diseases. Due to their size and association with repeats, they are difficult to detect by shotgun sequencing, especially when based on short reads. Long read, single-molecule sequencing technologies like those offered by Pacific Biosciences or Oxford Nanopore Technologies produce reads with a length of several thousand base pairs. Despite the higher error rate and sequencing cost, long-read sequencing offers many advantages for the detection of structural variants. Yet, available software tools still do not fully exploit the possibilities.We present SVIM, a tool for the sensitive detection and precise characterization of structural variants from long-read data. SVIM consists of three components for the collection, clustering and combination of structural variant signatures from read alignments. It discriminates five different variant classes including similar types, such as tandem and interspersed duplications and novel element insertions. SVIM is unique in its capability of extracting both the genomic origin and destination of duplications. It compares favorably with existing tools in evaluations on simulated data and real datasets from Pacific Biosciences and Nanopore sequencing machines.The source code and executables of SVIM are available on Github: github.com/eldariont/svim. SVIM has been implemented in Python 3 and published on bioconda and the Python Package Index.Supplementary data are available at Bioinformatics online.},
	language = {en},
	number = {17},
	urldate = {2025-10-03},
	journal = {Bioinformatics},
	author = {Heller, David and Vingron, Martin},
	month = sep,
	year = {2019},
	note = {TLDR: SVIM is unique in its capability of extracting both the genomic origin and destination of duplications and novel element insertions, and compares favorably with existing tools in evaluations on simulated data and real datasets from PacBio and Nanopore sequencing machines.},
	keywords = {/unread},
	pages = {2907--2915},
	file = {Heller and Vingron - 2019 - SVIM structural variant identification using mapped long reads.pdf:/Users/ylk4626/Library/CloudStorage/OneDrive-NorthwesternUniversity/Zotero/chimeralm-paper/Heller and Vingron - 2019 - SVIM structural variant identification using mapped long reads.pdf:application/pdf;Snapshot:/Users/ylk4626/Zotero/storage/Z7HFSAJK/btz041.html:text/html},
}

